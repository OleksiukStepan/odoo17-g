<odoo>
  <record id="crm_lead_view_form_inherit_inventory" model="ir.ui.view">
    <field name="name">crm.lead.form.inherit.inventory</field>
    <field name="model">crm.lead</field>
    <field name="inherit_id" ref="crm.crm_lead_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//form/sheet/notebook" position="inside">
        <page name="gym_inventory_tab" string="Inventory">
          <button name="open_add_package_wizard" type="object" string="Add Product Package" class="btn-primary"/>
          <field name="inventory_line_ids">
            <tree editable="bottom">
              <field name="package_id"/>
              <field name="inventory_id"/>
              <field name="quantity"/>
              <field name="price_unit"/>
              <field name="subtotal"/>
            </tree>
          </field>
        </page>
      </xpath>
      <xpath expr="//form/header" position="after">
        <field name="expired_package_message" nolabel="1" class="oe_inline oe_read_only"/>
      </xpath>
    </field>
  </record>
</odoo>
