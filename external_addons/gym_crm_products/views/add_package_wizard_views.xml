<odoo>
  <record id="view_crm_lead_add_package_wizard_form" model="ir.ui.view">
    <field name="name">crm.lead.add.package.wizard.form</field>
    <field name="model">crm.lead.add.package.wizard</field>
    <field name="arch" type="xml">
      <form string="Add Product Package to Lead">
        <group>
          <field name="package_id"/>
        </group>
        <field name="line_ids">
          <tree editable="bottom">
            <field name="inventory_id"/>
            <field name="quantity"/>
            <field name="price_unit"/>
          </tree>
        </field>
        <footer>
          <button name="action_add_to_lead" type="object" string="Add to Lead" class="btn-primary"/>
          <button string="Cancel" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
