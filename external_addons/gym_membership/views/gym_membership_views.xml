<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_gym_membership_tree" model="ir.ui.view">
        <field name="name">gym.membership.tree</field>
        <field name="model">gym.membership</field>
        <field name="arch" type="xml">
            <tree string="Gym Memberships">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="price"/>
                <field name="status"/>
                <field name="membership_type"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="image_ids">
                    <tree editable="bottom">
                        <field name="membership_id" invisible="1"/>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <field name="name"/>
                    </tree>
                </field>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_gym_membership_form" model="ir.ui.view">
        <field name="name">gym.membership.form</field>
        <field name="model">gym.membership</field>
        <field name="arch" type="xml">
            <form string="Gym Membership">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="price"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="membership_type"/>
                        <field name="status"/>
                        <field name="partner_id"/>
                        <field name="trainer_id"/>
                        <field name="description"/>
                    </group>

                    <notebook>
                        <page string="Photos">
                            <field name="image_ids">
                                <tree editable="bottom">
                                    <field name="image" widget="image" class="oe_avatar"/>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>

            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_gym_membership_kanban" model="ir.ui.view">
        <field name="name">gym.membership.kanban</field>
        <field name="model">gym.membership</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="status"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_details">
                                <div>
                                    <strong><field name="name"/></strong><br/>
                                    <field name="partner_id"/><br/>
                                    <field name="membership_type"/><br/>
                                    <field name="status"/><br/>
                                    <field name="price"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_gym_membership" model="ir.actions.act_window">
        <field name="name">Gym Memberships</field>
        <field name="res_model">gym.membership</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

</odoo>