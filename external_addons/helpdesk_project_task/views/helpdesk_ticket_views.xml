<odoo>
  <record id="view_helpdesk_ticket_form_inherit_task" model="ir.ui.view">
    <field name="name">helpdesk.ticket.form.inherit.task</field>
    <field name="model">helpdesk.ticket</field>
    <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//form/header" position="inside">
        <field name="can_create_task" invisible="1"/>
        <button name="action_create_project_task"
                string="Create New Task"
                type="object"
                class="btn-primary"
                invisible="not can_create_task"
        />
      </xpath>
    </field>
  </record>
</odoo>
